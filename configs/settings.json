{
    // EDITOR
    "editor.codeLensFontFamily": "Fira Code, monospace",
    "editor.cursorBlinking": "smooth",
    "editor.dragAndDrop": false,
    "editor.foldingHighlight": false,
    "editor.fontFamily": "Fira Code, monospace",
    "editor.guides.bracketPairsHorizontal": false,
    "editor.matchBrackets": "near",
    "editor.minimap.showSlider": "always",
    "editor.occurrencesHighlight": false,
    "editor.overviewRulerBorder": false,
    "editor.renderLineHighlight": "none",
    "editor.scrollbar.horizontal": "visible",
    "editor.scrollbar.vertical": "visible",
    "editor.smoothScrolling": true,
    "editor.stickyTabStops": true,
    "editor.tabCompletion": "on",

    // FILES
    "files.autoSave": "afterDelay",
    "files.insertFinalNewline": true,
    "files.readonlyFromPermissions": true,
    "files.simpleDialog.enable": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,

    // WORKBENCH
    "workbench.colorTheme": "Default Dark+",
    "workbench.editor.decorations.badges": false,
    "workbench.editor.defaultBinaryEditor": "default",
    "workbench.editor.enablePreviewFromCodeNavigation": true,
    "workbench.editor.mouseBackForwardToNavigate": false,
    "workbench.editor.showIcons": false,
    "workbench.editor.tabSizing": "fixed",
    "workbench.editor.untitled.hint": "hidden",
    "workbench.editor.untitled.labelFormat": "name",
    "workbench.layoutControl.enabled": false,
    "workbench.list.smoothScrolling": true,
    "workbench.panel.opensMaximized": "never",
    "workbench.reduceMotion": "off",
    "workbench.startupEditor": "none",

    // ZENMODE
    "zenMode.centerLayout": false,
    "zenMode.hideLineNumbers": false,
    "zenMode.hideStatusBar": false,
    "zenMode.restore": false,

    // WINDOW
    "window.autoDetectHighContrast": false,
    "window.commandCenter": false,
    "window.menuBarVisibility": "compact",
    "window.newWindowDimensions": "maximized",
    "window.title": "${activeEditorMedium}",

    // EXPLORER
    "explorer.autoReveal": false,
    "explorer.decorations.badges": false,
    "explorer.enableUndo": false,
    "explorer.incrementalNaming": "smart",

    // SEARCH
    "search.decorations.badges": false,
    "search.showLineNumbers": true,
    "search.smartCase": true,

    // DEBUG
    "debug.console.fontFamily": "Fira Code, monospace",
    "debug.console.wordWrap": false,
    "debug.terminal.clearBeforeReusing": true,

    // SCM
    "scm.diffDecorationsGutterWidth": 2,
    "scm.inputFontFamily": "editor",
    "scm.inputFontSize": 14,

    // TERMINAL
    "terminal.external.windowsExec": "cmder",
    "terminal.integrated.altClickMovesCursor": false,
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "terminal.integrated.rightClickBehavior": "paste",
    "terminal.integrated.smoothScrolling": true,

    // NOTEBOOK
    "notebook.consolidatedRunButton": true,
    "notebook.dragAndDropEnabled": false,
    "notebook.lineNumbers": "on",

    // OTHERS
    "extensions.ignoreRecommendations": true,
    "telemetry.telemetryLevel": "off",
    "update.showReleaseNotes": false
}
